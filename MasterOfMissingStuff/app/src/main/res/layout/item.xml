<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="195dp"
        android:layout_height="182dp"
        app:srcCompat="@drawable/placeholder"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Item name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="188dp"
        android:layout_height="47dp"
        android:background="#8A6262"
        android:fontFamily="sans-serif-light"
        android:text="Locate item"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#878686"
        app:cornerRadius="30dp"
        app:iconPadding="0dp"
        app:iconTint="#FFFFFF"
        app:iconTintMode="multiply"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="433dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="219dp"
        android:layout_height="129dp"
        app:srcCompat="@drawable/momslogo"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="59dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:background="#8A6262"
        android:fontFamily="sans-serif-light"
        android:text="Remove"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:backgroundTint="#B84D4D"
        app:cornerRadius="30dp"
        app:iconPadding="0dp"
        app:iconTint="#FFFFFF"
        app:iconTintMode="multiply"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="608dp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif-light"
        android:text="Track"
        android:textSize="18"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="559dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:fontFamily="sans-serif-light"
        android:text="Lock"
        android:textSize="18"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="517dp" />

</androidx.constraintlayout.widget.ConstraintLayout>